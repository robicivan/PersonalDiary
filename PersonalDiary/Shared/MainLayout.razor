@inherits LayoutComponentBase
@inject CurrentUserService CurrentUser
@inject NavigationManager NavigationManager
@inject Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage.ProtectedLocalStorage LocalStorage

<PageTitle>PersonalDiary</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (CurrentUser.IsAuthenticated)
            {
                <span>Prijavljen kao: @CurrentUser.Username</span>
                <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="Logout">Odjava</button>
            }
            else
            {
                <a href="/login">Prijava</a>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !CurrentUser.IsAuthenticated)
        {
            try
            {
                var userIdResult = await LocalStorage.GetAsync<int>("userId");
                var usernameResult = await LocalStorage.GetAsync<string>("username");

                if (userIdResult.Success && usernameResult.Success)
                {
                    CurrentUser.SetUser(userIdResult.Value, usernameResult.Value!);
                    StateHasChanged();
                }
            }
            catch { }
        }
    }

    private async Task Logout()
    {
        CurrentUser.Clear();
        await LocalStorage.DeleteAsync("userId");
        await LocalStorage.DeleteAsync("username");
        NavigationManager.NavigateTo("/", true);
    }
}
