@inherits LayoutComponentBase
@inject CurrentUserService CurrentUser
@inject NavigationManager NavigationManager
@inject ThemeService ThemeService
@inject Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage.ProtectedLocalStorage LocalStorage
@implements IDisposable

<PageTitle>PersonalDiary</PageTitle>

<div class="page @(ThemeService.IsDark ? "dark-theme" : "")">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (CurrentUser.IsAuthenticated)
            {
                <span>Prijavljen kao: @CurrentUser.Username</span>
                <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="Logout">Odjava</button>
            }
            else
            {
                <a href="/login">Prijava</a>
            }

            <button class="btn btn-sm theme-toggle ms-3" @onclick="ToggleTheme"
                    title="@(ThemeService.IsDark ? "Svijetla tema" : "Tamna tema")">
                @if (ThemeService.IsDark)
                {
                    <span>‚òÄÔ∏è Svijetla</span>
                }
                else
                {
                    <span>üåô Tamna</span>
                }
            </button>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Restore auth
                if (!CurrentUser.IsAuthenticated)
                {
                    var userIdResult = await LocalStorage.GetAsync<int>("userId");
                    var usernameResult = await LocalStorage.GetAsync<string>("username");
                    if (userIdResult.Success && usernameResult.Success)
                    {
                        CurrentUser.SetUser(userIdResult.Value, usernameResult.Value!);
                    }
                }

                // Restore theme
                var themeResult = await LocalStorage.GetAsync<bool>("darkTheme");
                if (themeResult.Success && themeResult.Value != ThemeService.IsDark)
                {
                    ThemeService.SetTheme(themeResult.Value);
                }

                StateHasChanged();
            }
            catch { }
        }
    }

    private async Task ToggleTheme()
    {
        ThemeService.Toggle();
        try
        {
            await LocalStorage.SetAsync("darkTheme", ThemeService.IsDark);
        }
        catch { }
    }

    private async Task Logout()
    {
        CurrentUser.Clear();
        await LocalStorage.DeleteAsync("userId");
        await LocalStorage.DeleteAsync("username");
        NavigationManager.NavigateTo("/", true);
    }

    protected override void OnInitialized()
    {
        ThemeService.OnThemeChanged += StateHasChanged;
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= StateHasChanged;
    }
}
