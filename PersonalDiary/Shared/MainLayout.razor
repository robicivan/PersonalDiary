@inherits LayoutComponentBase
@inject CurrentUserService CurrentUser
@inject NavigationManager NavigationManager

<PageTitle>PersonalDiary</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (CurrentUser.IsAuthenticated)
            {
                <span>Prijavljen kao: @CurrentUser.Username</span>
                <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="Logout">Odjava</button>
            }
            else
            {
                <a href="/login">Prijava</a>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private void Logout()
    {
        CurrentUser.Clear();
        NavigationManager.NavigateTo("/", true);
    }
}
