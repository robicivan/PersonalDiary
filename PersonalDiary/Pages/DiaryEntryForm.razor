@page "/diary/new"
@page "/diary/{id:int}"
@using System.ComponentModel.DataAnnotations
@inject AppDbContext DbContext
@inject CurrentUserService CurrentUser
@inject NavigationManager NavigationManager
@inject EncryptionService EncryptionService

<h3>@(Id == 0 ? "Novi zapis" : "Uredi zapis")</h3>

@if (!CurrentUser.IsAuthenticated)
{
    <p>Niste prijavljeni. <a href="/login">Prijavite se</a></p>
}
else
{
    <EditForm Model="@entryModel" OnValidSubmit="@SaveEntry">
        <DataAnnotationsValidator />

        <div class="form-group mb-3">
            <label>Naslov:</label>
            <InputText @bind-Value="entryModel.Title" class="form-control" />
            <ValidationMessage For="@(() => entryModel.Title)" class="text-danger small mt-1" />
        </div>

        <div class="form-group mb-3">
            <label>Sadržaj:</label>
            <InputTextArea @bind-Value="entryModel.Content" class="form-control" rows="10" />
            <ValidationMessage For="@(() => entryModel.Content)" class="text-danger small mt-1" />
        </div>

        <div class="form-group mb-3">
            <label>Oznake (tagovi):</label>
            <div class="d-flex gap-2 flex-wrap mb-2">
                @foreach (var tag in currentTags)
                {
                    <span class="badge bg-primary d-inline-flex align-items-center gap-1" style="font-size:0.85rem;">
                        @tag
                        <button type="button" class="btn-close btn-close-white btn-sm" style="font-size:0.6rem;"
                                @onclick="() => RemoveTag(tag)" aria-label="Ukloni"></button>
                    </span>
                }
            </div>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Dodaj oznaku"
                       @bind="newTagInput" @bind:event="oninput"
                       @onkeydown="HandleTagKeyDown" />
                <button type="button" class="btn btn-outline-secondary" @onclick="AddTag">Dodaj</button>
            </div>
            <small class="text-muted">Klikni Dodaj za dodavanje, × za uklanjanje</small>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" @bind="entryModel.IsEncrypted" class="form-check-input" id="encryptCheck" />
            <label class="form-check-label" for="encryptCheck">Šifriraj sadržaj</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary"
                    disabled="@(!editContext.Validate())">Spremi</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancel">Odustani</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private EntryModel entryModel = new();
    private EditContext editContext = default!;
    private List<string> currentTags = new();
    private string newTagInput = "";
    private User? currentUser;

    protected override void OnInitialized()
    {
        editContext = new EditContext(entryModel);
    }

    protected override async Task OnInitializedAsync()
    {
        if (!CurrentUser.IsAuthenticated)
            return;

        currentUser = await DbContext.Users.FindAsync(CurrentUser.UserId);

        if (Id != 0)
        {
            var existing = await DbContext.DiaryEntries.FindAsync(Id);
            if (existing != null && existing.UserId == CurrentUser.UserId && currentUser != null)
            {
                entryModel.Title = existing.Title;
                entryModel.Content = existing.IsEncrypted
                    ? EncryptionService.Decrypt(existing.Content, currentUser.EncryptionKey, currentUser.EncryptionIV)
                    : existing.Content;
                entryModel.IsEncrypted = existing.IsEncrypted;
                currentTags = existing.GetTagList();
            }
            else
            {
                NavigationManager.NavigateTo("/diary");
            }
        }
    }

    private void AddTag()
    {
        var tag = newTagInput.Trim().ToLowerInvariant().Replace(",", "");
        if (!string.IsNullOrWhiteSpace(tag) && !currentTags.Contains(tag))
        {
            currentTags.Add(tag);
        }
        newTagInput = "";
    }

    private void RemoveTag(string tag)
    {
        currentTags.Remove(tag);
    }

    private void HandleTagKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            AddTag();
        }
    }

    private async Task SaveEntry()
    {
        if (currentUser == null) return;

        DiaryEntry entry;

        if (Id == 0)
        {
            entry = new DiaryEntry();
            entry.UserId = CurrentUser.UserId!.Value;
            entry.CreatedAt = DateTime.Now;
            DbContext.DiaryEntries.Add(entry);
        }
        else
        {
            entry = await DbContext.DiaryEntries.FindAsync(Id);
            if (entry == null || entry.UserId != CurrentUser.UserId)
                return;
            entry.UpdatedAt = DateTime.Now;
        }

        entry.Title = entryModel.Title;
        entry.IsEncrypted = entryModel.IsEncrypted;
        entry.Tags = string.Join(",", currentTags);

        if (entryModel.IsEncrypted)
        {
            entry.Content = EncryptionService.Encrypt(entryModel.Content, currentUser.EncryptionKey, currentUser.EncryptionIV);
        }
        else
        {
            entry.Content = entryModel.Content;
        }

        await DbContext.SaveChangesAsync();
        NavigationManager.NavigateTo("/diary");
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/diary");
    }

    public class EntryModel
    {
        [Required(ErrorMessage = "Naslov je obavezan.")]
        [MinLength(1, ErrorMessage = "Naslov je obavezan.")]
        public string Title { get; set; } = "";

        [Required(ErrorMessage = "Sadržaj je obavezan.")]
        [MinLength(1, ErrorMessage = "Sadržaj je obavezan.")]
        public string Content { get; set; } = "";

        public bool IsEncrypted { get; set; } = true;
    }
}
