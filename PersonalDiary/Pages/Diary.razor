@page "/diary"
@inject AppDbContext DbContext
@inject CurrentUserService CurrentUser
@inject NavigationManager NavigationManager
@inject NavigationManager Nav
@inject EncryptionService EncryptionService
@inject Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage.ProtectedLocalStorage LocalStorage

<h3>Moj dnevnik</h3>

@if (!CurrentUser.IsAuthenticated)
{
    <p>Niste prijavljeni. <a href="/login">Prijavite se</a></p>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <button class="btn btn-success" @onclick="GoToNew">Novi zapis</button>
    </div>

    @* Search bar *@
    <div class="mb-3 position-relative">
        <input type="text" class="form-control pe-5" placeholder="Pretraži po naslovu ili sadržaju..."
               @bind="searchQuery" @bind:event="oninput" />
        @if (!string.IsNullOrEmpty(searchQuery))
        {
            <button class="btn btn-sm position-absolute top-50 end-0 translate-middle-y me-2 p-0 border-0 bg-transparent text-muted"
                    style="font-size:1.1rem; line-height:1;" @onclick="ClearSearch"
                    title="Obriši pretragu">✕</button>
        }
    </div>

    @if (allTags.Any())
    {
        <div class="mb-3">
            <strong>Filtriraj po oznaci:</strong>
            <div class="d-flex gap-2 flex-wrap mt-1">
                <button class="btn btn-sm @(activeTag == null ? "btn-secondary" : "btn-outline-secondary")"
                        @onclick="() => SetFilter(null)">Sve</button>
                @foreach (var tag in allTags)
                {
                    <button class="btn btn-sm @(activeTag == tag ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SetFilter(tag)">@tag</button>
                }
            </div>
        </div>
    }

    @if (entries == null)
    {
        <p><em>Učitavanje...</em></p>
    }
    else if (!FilteredEntries.Any())
    {
        <p class="text-muted">
            @if (!string.IsNullOrWhiteSpace(searchQuery))
            {
                <span>Nema rezultata za „<strong>@searchQuery</strong>".</span>
            }
            else if (activeTag != null)
            {
                <span>Nema zapisa s oznakom „<strong>@activeTag</strong>".</span>
            }
            else
            {
                <span>Trenutno ne postoji nijedan zapis.</span>
            }
        </p>
    }
    else
    {
        @if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            <p class="text-muted small mb-2">
                @FilteredEntries.Count() @(FilteredEntries.Count() == 1 ? "rezultat" : "rezultata") za „<strong>@searchQuery</strong>"
            </p>
        }

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Naslov</th>
                    <th>Oznake</th>
                    <th>Datum</th>
                    <th>Šifrirano</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in FilteredEntries)
                {
                    <tr>
                        <td>@HighlightTitle(entry.Title)</td>
                        <td>
                            @foreach (var tag in entry.GetTagList())
                            {
                                <span class="badge bg-primary me-1" style="cursor:pointer;"
                                      @onclick="() => SetFilter(tag)">@tag</span>
                            }
                        </td>
                        <td>@entry.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            @if (entry.IsEncrypted)
                            {
                                <span class="badge bg-warning">DA</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">NE</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary" @onclick="() => ViewEntry(entry.Id)">Pregled</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteEntry(entry.Id)">Obriši</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    private List<DiaryEntry> entries = new();
    private List<string> allTags = new();
    private string? activeTag = null;
    private string searchQuery = "";
    private User? currentUser;

    // Decrypted content cache for searching
    private Dictionary<int, string> decryptedCache = new();

    private IEnumerable<DiaryEntry> FilteredEntries
    {
        get
        {
            var result = entries.AsEnumerable();

            if (activeTag != null)
                result = result.Where(e => e.GetTagList().Contains(activeTag));

            if (!string.IsNullOrWhiteSpace(searchQuery))
            {
                var q = searchQuery.Trim();
                result = result.Where(e =>
                    e.Title.Contains(q, StringComparison.OrdinalIgnoreCase) ||
                    GetSearchableContent(e).Contains(q, StringComparison.OrdinalIgnoreCase));
            }

            return result;
        }
    }

    private string GetSearchableContent(DiaryEntry entry)
    {
        if (!entry.IsEncrypted)
            return entry.Content;

        if (decryptedCache.TryGetValue(entry.Id, out var cached))
            return cached;

        if (currentUser == null)
            return "";

        try
        {
            var plain = EncryptionService.Decrypt(entry.Content, currentUser.EncryptionKey, currentUser.EncryptionIV);
            decryptedCache[entry.Id] = plain;
            return plain;
        }
        catch
        {
            return "";
        }
    }

    // Renders title with search term highlighted
    private RenderFragment HighlightTitle(string title) => builder =>
    {
        if (string.IsNullOrWhiteSpace(searchQuery) ||
            !title.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
        {
            builder.AddContent(0, title);
            return;
        }

        var q = searchQuery.Trim();
        int idx = title.IndexOf(q, StringComparison.OrdinalIgnoreCase);
        int seq = 0;

        while (idx >= 0)
        {
            if (idx > 0)
                builder.AddContent(seq++, title[..idx]);

            builder.OpenElement(seq++, "mark");
            builder.AddAttribute(seq++, "class", "search-highlight");
            builder.AddContent(seq++, title.Substring(idx, q.Length));
            builder.CloseElement();

            title = title[(idx + q.Length)..];
            idx = title.IndexOf(q, StringComparison.OrdinalIgnoreCase);
        }

        if (title.Length > 0)
            builder.AddContent(seq, title);
    };

    private void ClearSearch()
    {
        searchQuery = "";
    }

    private void GoToNew()
    {
        Nav.NavigateTo("/diary/new");
    }

    private void SetFilter(string? tag)
    {
        activeTag = tag;
    }

    protected override async Task OnInitializedAsync()
    {
        if (!CurrentUser.IsAuthenticated)
            return;

        await LoadEntries();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        if (!CurrentUser.IsAuthenticated)
        {
            try
            {
                var userIdResult = await LocalStorage.GetAsync<int>("userId");
                var usernameResult = await LocalStorage.GetAsync<string>("username");

                if (userIdResult.Success && usernameResult.Success)
                {
                    CurrentUser.SetUser(userIdResult.Value, usernameResult.Value!);
                    await LoadEntries();
                    StateHasChanged();
                }
            }
            catch { }
        }
    }

    private async Task LoadEntries()
    {
        decryptedCache.Clear();
        currentUser = await DbContext.Users.FindAsync(CurrentUser.UserId);
        entries = await DbContext.DiaryEntries
            .Where(e => e.UserId == CurrentUser.UserId)
            .OrderByDescending(e => e.CreatedAt)
            .ToListAsync();

        allTags = entries
            .SelectMany(e => e.GetTagList())
            .Distinct()
            .OrderBy(t => t)
            .ToList();
    }

    private void ViewEntry(int id)
    {
        NavigationManager.NavigateTo($"/diary/{id}");
    }

    private async Task DeleteEntry(int id)
    {
        var entry = await DbContext.DiaryEntries.FindAsync(id);
        if (entry != null && entry.UserId == CurrentUser.UserId)
        {
            DbContext.DiaryEntries.Remove(entry);
            await DbContext.SaveChangesAsync();
            await LoadEntries();
            StateHasChanged();
        }
    }
}
